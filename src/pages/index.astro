---
import Card from "../components/card.astro";
import Chip from "../components/chip.astro";

// Put all your links here
const links: Link[] = [
  {
    desc: "Amazon",
    link: "www.amazon.nl/hz/wishlist/ls/ST08IYFYN56V?ref_=wl_share",
    icon: "fa-solid fa-dice-d20",
  },
  {
    desc: "Bol",
    link: "www.bol.com/nl/nl/verlanglijstje/8e40bbee-2731-48df-b9f1-bdb2e2d67e38/?referrer=ENTEMA000000SNWL99",
    icon: "fa-solid fa-store",
  },
  {
    desc: "HumbleBundle",
    link: "www.humblebundle.com/store/wishlist/5442365879746560",
    icon: "fa-solid fa-gamepad",
  },
];
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/x-icon' href='/favicon.png' />
    <meta name='viewport' content='width=device-width' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
      integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content='Useful links of Melvin Loos' />
    <meta name='author' content='Melvin Loos' />
    <meta property='og:title' content='Melvin Loos' />
    <meta property='og:image' content='favicon.png' />
    <meta property='og:description' content='Linktree of Melvin Loos' />
    <meta property='twitter:description' content='Linktree of Melvin Loos' />
    <meta property='twitter:title' content='Melvin Loos' />
    <meta property='twitter:image' content='favicon.png' />
    <meta name='twitter:card' content='summary' />
    <title>Links of Melvin Loos</title>
    <style>
      @font-face {
        font-family: Geist;
        src: url(/Geist.ttf);
        font-display: swap;
      }
    </style>
  </head>
  <body
    class='bg-[#1e1e1e] flex justify-center items-center w-screen h-screen font-[Geist] text-white'
  >
    <main class='w-[80%] flex flex-col gap-8'>
      <h1 class='md:text-6xl text-4xl font-black text-center'>Melvin Loos</h1>
      <div class='grid justify-center gap-4'>
        <h2 class='md:text-4xl text-2xl font-black text-center'>Wishlists</h2>
        {
          links.map(({ desc, link, icon }) => {
            return <Card {desc} {link} {icon} />;
          })
        }
      </div>
      <div class='flex justify-center gap-8'>
        <!-- Put some social links who have a definitive icon here: -->
        <Chip link='github.com/MelvinLoos' icon='fa-brands fa-github' />
        <Chip link='linkedin.com/in/melvinloos' icon='fa-brands fa-linkedin' />
        <!-- <Chip link='youtube.com/' icon='fa-brands fa-youtube' /> -->
        <!-- <Chip link='x.com/' icon='fa-brands fa-x-twitter' /> -->
      </div>
      <p class='text-center mx-auto'></p>
    </main>
  </body>
</html>